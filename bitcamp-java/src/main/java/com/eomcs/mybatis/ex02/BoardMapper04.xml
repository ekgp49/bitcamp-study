<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="BoardMapper">

  <resultMap type="Board" id="BoardMap">
    <id column="board_id" property="no"/>
    <result column="title" property="title"/>
    <result column="contents" property="content"/>
    <result column="created_date" property="registeredDate"/>
     <result column="view_count" property="viewCount"/>
  </resultMap>
  
  <!-- SQL 문에 값 삽입하기
       => #{key이름}
       => 값이 들어 있는 객체를 태그 속성에 지정한다.
          parameterType="값이들어있는객체의타입명 또는 별명"
   -->
  <select id="selectBoard1" 
          resultMap="BoardMap" parameterType="int">
     select 
      board_id,
      title,
      contents,
      created_date,
      view_count
    from x_board
  where board_id > #{asd}
  </select>
  
  <select id="selectBoard2" 
          resultMap="BoardMap" parameterType="string">
     select 
      board_id,
      title,
      contents,
      created_date,
      view_count
    from x_board
  where title like #{hahhahahahahaha}
  </select>
  
  <select id="selectBoard3" 
          resultMap="BoardMap" parameterType="map">
     select 
      board_id,
      title,
      contents,
      created_date,
      view_count
    from x_board
    limit #{startIndex}, #{size}
  </select>
  
</mapper>







